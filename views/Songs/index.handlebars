<h2>Songs</h2>

<div class="container">
    <ul>
        {{#each songs as |song|}}
        <li>
            {{#if ../logged_in}}
                    <a class="btn btn-sm btn-info" href="/playlists/addSong/{{song.id}}"><span
                        class="material-icons-outlined">playlist_add</span></a>
                
                {{/if}}
                <a href="/songs/{{song.id}}">{{song.name}}</a> by <a
                    href="/artists/{{song.artists.[0].id}}">{{song.artists.[0].name}}</a>
        </li>

        {{/each}}
    </ul>
  </div>